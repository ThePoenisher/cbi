#!/usr/bin/perl
use strict;
use Switch;

my $SINK=0;
		
switch($ARGV[0]){
		case "toggle_all" { 
				my @a=`pactl list sinks   | grep -E "(Sink|Mute)"`;
				for (my $i=0;$i<scalar @a;$i+=2)
				{
						$a[$i] =~ m/Sink #([0-9])+/;
						exec "pactl set-sink-mute $1 ".( $a[$i+1] =~ m/: no/ ? "1" : "0") 
				}
		}
		case "conky" {
				my @a=`pactl list short sinks`;
				for (my $i=0;$i<scalar @a;$i++)
				{
						$a[$i] =~ m/([0-9])+\t/;
						my $v=`pactl list sinks | sed -nre '/Sink #$1/,/Volume/p'`;
						$v =~ m/Volume: 0: ([^%]+).*/;
						my $p=$1;
						print "^i(/home/johannes/cbi/desktop-artwork/icons/sm4tik/".($v =~ m/Mute: yes/ ? "vol-mute.xbm) M": "spkr_01.xbm)")." $p%";
				}
		}
		case ["voldown","volup"] {
				my @a=`pactl list short sinks`;
				for (my $i=0;$i<scalar @a;$i++)
				{
						$a[$i] =~ m/([0-9])+\t/;
					  exec "pactl -- set-sink-volume $1  '".($ARGV[0] eq"voldown"?"-":"+")."10%'"
				}
		}
}
