#!/bin/zsh
while true; do
		#ohen /dev/random, of sehr nahe beieinander liegende Ergebnisse (+/- 1) <2014-03-24 Mon>
 			e=`shuf -n1 --random-source=/dev/random /home/data/music/all`; echo $e\?
			print -S "nvlc \"$e\" #suggestion" 
			while true; do
					read -k 1 a
					echo
					if [ "$a" = "n" ]; then break;
					elif [ "$a" = "u"  ]; then
							echo updating /home/data/music/all ...
							find /home/data/music/* -type d | egrep -iv "(Hörspiel|/Scans?|Artwork|Booklet|/Covers)" > /home/data/music/all
							echo The following item have been expluded:
							find /home/data/music/* -type d | egrep -i "(Hörspiel|/Scans?|Artwork|Booklet|/Covers)" 
							echo done
					else
							nvlc "$e";
							break;
					fi
			done
done  
