! Activate these setting with "xrdb ~/.Xresources"

! xterm
xterm*termName: xterm-256color
XTerm*locale: true
XTerm*background: rgb:00/00/00
XTerm*foreground: rgb:ff/ff/ff
xterm*faceName:xft:DejaVu Sans Mono:style=Regular:size=10
XTerm*metaSendsEscape: true
! https://wiki.archlinux.org/index.php/Xterm


! Real Transparency
URxvt.depth: 32
URxvt*background: rgba:0000/0000/0000/bbbb

! Fake Transparency
! urxvt*transparent: true
! URxvt*.shading: 0 to 99 darkens, 101 to 200 lightens
!urxvt*shading: 25


URxvt.foreground: white

!-- Xft settings -- !
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
! Xft.hinting:    true
! Xft.hintstyle:  hintslight

!-- xfc Fonts -- !
xscreensaver.Dialog.headingFont:xft:Droid Sans Mono:style=Regular:size=11
URxvt.font:xft:Droid Sans Mono:style=Regular:size=11
!xft:Bitstream Vera Sans Mono:style=Roman:size=1
!xft:Liberation Mono:style=Regular:size=10!
!URxvt.font: xft:Ubuntu Mono:style=Regular:size=10:antialias=true
!URxvt.font: xft:DejaVu Sans Mono:style=Book:size=10
!URxvt.font: xft:Monaco:style=regular:size=10

!URxvt.font: -*-terminus-*-*-*-*-14*-*-*-*-iso8859-*
!URxvt.font: -*-fixed-*-*-*-*-14-*-*-*-iso8859-*
!URxvt.font: -*-terminus-*-*-*-*-14*-*-*-*-iso8859-*

!debussy
!URxvt*letterSpace: -3
URxvt*saveLines: 12000
URxvt*color4: #0099FF
!RoyalBlue
URxvt*color12: #0099FF
